<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= farm.name %></title>
  </head>

  <body>
    <h1><%= farm.name %></h1>
    <ul>
      <li>Name: <%= farm.name%></li>
      <li>City: <a><%= farm.city%></a></li>
      <li>Email: <a><%= farm.email%></a></li>
    </ul>
    <h2>Products</h2>
    <ul>
      <% for(let product of farm.products) { %>
      <li><a href="/products/" <%="product._id" %>><%= product.name %> </a></li>
      <% } %>
    </ul>
    <a href="/farms">All Farms</a>
    <a href="/farms/<%= farm._id %>/products/new ">Add Product</a>
    <a href="/farms/<%=farm._id%>/edit">Edit Product</a>
    <form action="/farms/<%=farm._id%>?_method=DELETE" method="POST">
      <button>Delete</button>
    </form>
  </body>
</html>
